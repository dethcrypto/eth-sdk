{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2019",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.mjs", "**/*.cjs", "**/.*.js", ".mocharc.cjs"],
  "exclude": ["**/node_modules"]
}
