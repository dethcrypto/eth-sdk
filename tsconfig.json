{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2018"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/.*.js",
    "packages/client/index.cjs",
    "examples/vite-react/hardhat.config.mts"
  ],
  "exclude": ["**/node_modules"]
}
